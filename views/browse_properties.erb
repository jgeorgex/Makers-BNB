<!DOCTYPE html>

  <head>
    <meta charset="utf-8">
    <title>Browse our wonderful properties</title>
    <style media="screen">
      table, th, td { border: 1px solid black; }
      table { width: 33%; }
    </style>
  </head>

<body>
<div class="navigation">
  <form action="/user/<%= @id %>" method="get">
    <button type="submit" name="homepage">Return to Homepage</button>
  </form>
</div>
<br>
<br>
<div id="requests">
<h1>Booking Requests</h1>
  <% @reservations.each do |reservation_arr| %>
    <% reservation_arr.each do |reservation| %>
    <table>
      <tr>
        <th>Requested Date: <%= reservation.res_date %></th>
      </tr>
      <tr>
        <td>Guest Name: <%= reservation.guest.firstname + reservation.guest.surname %> <%= reservation.guest.surname %></td>
      </tr>
    </table>
    <br>
    <br>
    <% end %>
  <% end %>
</div>
<h1>Available properties:</h1>
<div>
        <% @properties.each do |property| %>
  <table>
    <tr>
      <th colspan="2"><a href="/user/<%= @id%>/booking/<%= property.id %>">Name: <%= property.name %></a></th>
    </tr>
    <tr>
      <td colspan="2">Address: <%= property.address %></td>
    </tr>
    <tr>
      <td>Capacity: <%= property.capacity %></td> <td>Nightly Rate: <%= property.pricepn %></td>
    </tr>
    <tr>
      <td colspan="2">Description: <%= property.description %></td>
    </tr>
  </table>
  <br>
  <br>
          <% end %>
</div>
</body>
